{#-- gallery --#}
{% if module.moduleGallery|length %}
	{% set images = module.moduleGallery %}
	<div class="uk-container {% if entry.containerWidth == 'small' %}uk-container-small{% endif %} uk-margin-medium">
		<div class="uk-grid uk-grid-medium uk-child-width-1-2 uk-child-width-1-3@s" data-uk-grid data-uk-lightbox>

			{% for image in images.all() %}
			<div>
				<figure>
					<a data-caption="{{ image.title }}" title="{{ image.title }}" href="{{ image.url }}">
						<img data-src="{{ image.url }}" width="300" height="200" alt="{{ 'Photo'|t }} [{{ image.titel }}-{{ siteName }}]" data-uk-img>
					</a>
					<figcaption class="uk-text-small uk-text-muted uk-text-center uk-padding-small uk-visible@s">{{ image.title }}</figcaption>
				</figure>
			</div>
			{% endfor %}
			
		</div>
	</div>
{% endif %}